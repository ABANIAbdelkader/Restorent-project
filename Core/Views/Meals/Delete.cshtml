@model Core.Models.Meal

@{
    ViewData["Title"] = "Delete";
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>Manager and User Interface</title>
    <style>
    body {
    background-color: #121212;
    color: #ffc107;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .form-container {
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    padding: 30px;
    box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.5);
    margin-top: 5%;
    max-width: 600px;
    }

    .form-control {
    background-color: #343a40;
    color: #ffc107;
    border: 1px solid #ffc107;
    }

    .form-control::placeholder {
    color: #ffc107;
    opacity: 0.6;
    }

    .btn-custom {
    background-color: #ff6b6b;
    color: #fff;
    border: none;
    width: 100%;
    }

    .btn-custom:hover {
    background-color: #ff4c4c;
    }

    .form-label {
    color: #ffc107;
    }

    h2 {
    font-size: 2rem;
    color: #ffc107;
    }

    .container {
    max-width: 500px;
    }
    </style>
</head>

<body class="bg-dark text-warning">

<div>
		<h4>Meal</h4><h1>Delete</h1>

		<h3>Are you sure you want to delete this?</h3>

        <div class="container form-container">
            <h2 class="text-center mb-4">Delete Meal</h2>
			
            <hr />
    <dl class="row">
                <dt class="mb-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
                <dd class="mb-3">
            @Html.DisplayFor(model => model.Name)
        </dd>
                <dt class="mb-3">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
                <dd class="mb-3">
            @Html.DisplayFor(model => model.Description)
        </dd>
                <dt class="mb-3">
            @Html.DisplayNameFor(model => model.price)
        </dt>
                <dd class="mb-3">
            @Html.DisplayFor(model => model.price)
        </dd>
       
      
    </dl>
    
    <form method="post" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Name" >
        <input type="hidden" asp-for="Description">

                <div class="text-center">
                    <button type="submit" class="btn btn-custom">Delete </button>
                </div>       </form>
                <div class="text-center"> 
            <a asp-controller="Manager" class=" text-warning" asp-action="Index">Back to List</a>
		</div>
	</div>
</div>

</body>
</html>
