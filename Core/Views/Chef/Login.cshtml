@model Chef
@{
    ViewData["Title"] = "Login";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        /* Additional styling to improve aesthetics */
        body {
            background-image:url('/images/dr.jpg');
            background-color: #121212;
            color: #ffc107;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-container {
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.5);
            margin-top: 5%;
        }

        .form-control {
            background-color: #343a40;
            color: #ffc107;
            border: 1px solid #ffc107;
        }

        .form-control::placeholder {
            color: #ffc107;
            opacity: 0.6;
        }

        .btn-custom {
            background-color: #ffc107;
            color: #121212;
        }

        .btn-custom:hover {
            background-color: #ffcd39;
            color: #000;
        }

        .text-center h1 {
            font-size: 2.5rem;
        }
    </style>
</head>
<body>
    <div class="container w-50 login-container">
        <form method="post" asp-controller="Chef" asp-action="Login" class="p-3">
            <div class="text-center mb-4">
                <h1>Login</h1>
                <hr class="text-warning w-50 mx-auto" />
            </div>

            <div class="mb-3">
                <label asp-for="Card_Number" class="form-label"></label>
                <input asp-for="Card_Number" class="form-control" placeholder="Enter Card Number" />
            </div>

            <div class="mb-4">
                <label asp-for="Card_Password" class="form-label"></label>
                <input asp-for="Card_Password" class="form-control" type="password" placeholder="Enter Password" />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-custom w-50">Login</button>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @section Scripts {
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
</body>
</html>
